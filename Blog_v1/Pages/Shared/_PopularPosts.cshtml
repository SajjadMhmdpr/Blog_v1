@using Blog.CoreLayer.Utilities
@model List<Blog.CoreLayer.Dtos.Posts.PostDto>
@{
}
<h4 class="widget-title">محبوب ترین مقالات</h4>
<ul class="post-list-small">
    @foreach (var i in Model)
    {
        <li class="post-list-small__item">
            <article class="post-list-small__entry clearfix">
                <div class="post-list-small__img-holder">
                    <div class="thumb-container thumb-100">
                        <a asp-page="Post" asp-route-slug="@i.Slug">
                            <img data-src="@Directories.GetPostImage(i.ImageName)" src="/Images/learn-html-in-simple-way.jpg" alt="" class="post-list-small__img--rounded lazyload">
                        </a>
                    </div>
                </div>
                <div class="post-list-small__body">
                    <h3 class="post-list-small__entry-title">
                        <a asp-page="Post" asp-route-slug="@i.Slug">@i.Title</a>
                    </h3>
                    <ul class="entry__meta">
                        <li class="entry__meta-author">
                            <span>نویسنده:</span>
                            <a href="#">@i.UserFullName</a>
                        </li>
                        <li class="entry__meta-date">
                            @i.CreationDate.ToPersianDate("ds dd ms Y")
                        </li>
                    </ul>
                </div>
            </article>
        </li>
    }


</ul>