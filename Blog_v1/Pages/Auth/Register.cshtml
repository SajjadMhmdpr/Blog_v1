@page
@model Blog.Web.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام" asp-for="Fullname" />
        <span asp-validation-for="Fullname" style="color: red"></span>

    </div>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName"/>
        <span asp-validation-for="UserName" style="color: red"></span>

    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password"/>
        <span asp-validation-for="Password" style="color: red"></span>

    </div>
    <div>
        <input type="password" placeholder="تکرار کلمه عبور" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" style="color: red"></span>

    </div>
    <div>
        <input type="submit" value="ثبت نام"/>
        <a asp-page="login">ورود</a>
    </div>
</form>